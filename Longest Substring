#include <stdio.h>
#include <string.h>
#include <stdbool.h>

int lengthOfLongestSubstring(char* s) {
    int lastIndex[256]; // store last index of each character (ASCII)
    for (int i = 0; i < 256; i++)
        lastIndex[i] = -1;

    int maxLen = 0;
    int start = 0;

    for (int i = 0; s[i] != '\0'; i++) {
        if (lastIndex[(int)s[i]] >= start) {
            start = lastIndex[(int)s[i]] + 1;
        }
        lastIndex[(int)s[i]] = i;
        if (i - start + 1 > maxLen)
            maxLen = i - start + 1;
    }
    return maxLen;
}

int main() {
    char str[100];
    printf("Enter a string: ");
    scanf("%s", str);
    int result = lengthOfLongestSubstring(str);
    printf("Length of longest substring without repeating characters: %d\n", result);
    return 0;
}
