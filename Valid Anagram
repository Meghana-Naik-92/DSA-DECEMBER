#include <stdio.h>
#include <string.h>
#include <stdbool.h>

bool isAnagram(char* s, char* t) {
    int count[26] = {0};
    int i;
    if (strlen(s) != strlen(t))
        return false;
    for (i = 0; s[i] != '\0'; i++) {
        count[s[i] - 'a']++;
    }
    for (i = 0; t[i] != '\0'; i++) {
        count[t[i] - 'a']--;
    }
    for (i = 0; i < 26; i++) {
        if (count[i] != 0)
            return false;
    }

    return true;
}

int main() {
    char s[100], t[100];

    // Take input from user
    printf("Enter first string: ");
    scanf("%s", s);

    printf("Enter second string: ");
    scanf("%s", t);

    if (isAnagram(s, t))
        printf("Valid Anagram\n");
    else
        printf("Not a Valid Anagram\n");

    return 0;
}
