#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>

// Function to check which kids can have the greatest number of candies
bool* kidsWithCandies(int* candies, int n, int extraCandies, int* returnSize) {
    *returnSize = n;
    bool* result = (bool*)malloc(n * sizeof(bool));
    int max = candies[0];
    for (int i = 1; i < n; i++) {
        if (candies[i] > max) {
            max = candies[i];
        }
    }
    for (int i = 0; i < n; i++) {
        if (candies[i] + extraCandies >= max) {
            result[i] = true;
        } else {
            result[i] = false;
        }
    }
    return result;
}

int main() {
    int n, extra;
    printf("Enter number of kids: ");
    scanf("%d", &n);
    int candies[n];
    bool* result;
    printf("Enter candies for each kid:\n");
    for (int i = 0; i < n; i++)
        scanf("%d", &candies[i]);
    printf("Enter extra candies: ");
    scanf("%d", &extra);

    int returnSize;
    result = kidsWithCandies(candies, n, extra, &returnSize);

    printf("Result: ");
    for (int i = 0; i < returnSize; i++) {
        printf("%s ", result[i] ? "true" : "false");
    }
    printf("\n");

    free(result);
    return 0;
}
